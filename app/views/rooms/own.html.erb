<section class="hero is-success">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
       登録済み一覧
      </h1>
    </div>
  </div>
</section>

<section class="section">
  <div class="container">
    <div class="columns is-multiline">
      <% @rooms.each do |room| %>
        <div class="column is-4">
          <div class="card">
            <div class="card-image">
        
              <% if room.image.attached? %>
              <figure class="image is-4by3">
                <%= image_tag room.image %>
              </figure>
              <% else %> 
              <figure class="image is-4by3">
                <%= image_tag "default-room.png" %>
                </figure>
              <% end %>
              
            </div>
            <div class="card-content">
              <div class="media">
                <div class="media-left">
                  <%= room.introduce %>
                </div>
                <div class="media-content">
                  <%= room.created_at.to_s(:datetime_jp) %>
                </div>
              </div>
              <div class="content">
                <price>¥<%= room.single_rate %>〜</price>
              </div>
              <%= link_to "編集", edit_room_path(room.id), class: "button is-success" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>




